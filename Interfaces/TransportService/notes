				–ü—É—Ç—å = —Å—Ä.—Å–∫–æ—Ä–æ—Å—Ç—å * –ø—Ä–æ—à–µ–¥—à–µ–µ –≤—Ä–µ–º—è
				–ö–æ–æ—Ä–¥–∏–Ω–∞—Ç–∞ += –ü—É—Ç—å
			(–ë–∞—Ç–∞—Ä–µ—é —Ä–∞–∑—Ä—è–∂–∞–µ–º –≤ –ø–µ—Ä–≤—É—é –æ—á–µ—Ä–µ–¥—å, —Ç–∞–∫ –∫–∞–∫ –ø–µ—Ä–µ–∑–∞—Ä—è–¥–∏—Ç—å –±–∞—Ç–∞—Ä–µ—é - –¥–µ—à–µ–≤–ª–µ)
			  –í—Ä–µ–º—è –Ω–∞ –±–∞—Ç–∞—Ä–µ–µ = –ó–• –±–∞—Ç–∞—Ä–µ–∏ –≤ –ö–ú / —Å—Ä.—Å–∫–æ—Ä–æ—Å—Ç—å
			2.2.2.1 –ï—Å–ª–∏ –ó–∞–ø–∞—Å —Ö–æ–¥–∞ –Ω–∞ –±–∞—Ç–∞—Ä–µ–µ –±–æ–ª—å—à–µ —á–µ–º –ø—Ä–æ—à–µ–¥—à–µ–µ –≤—Ä–µ–º—è, —Ç–æ:
				1. –ó–∞—Ä—è–¥ –±–∞—Ç–∞—Ä–µ–∏ -= –ü—É—Ç—å * —Ä–∞—Å—Ö–æ–¥ –∑–∞—Ä—è–¥–∞ –Ω–∞ 1–∫–º
				2. –õ–æ–≥: "–ì–∏–±—Ä–∏–¥ %s –¥–≤–∏–≥–∞–ª—Å—è –Ω–∞ —ç–ª–µ–∫—Ç—Ä–æ–¥–≤–∏–≥–∞—Ç–µ–ª–µ –∏ –æ—Å—Ç–∞–Ω–æ–≤–∏–ª—Å—è –Ω–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–µ %0.f –≤ %s (–≤—Ä–µ–º—è –°–µ–π—á–∞—Å)"
			2.2.2.2 –ï—Å–ª–∏ –ó–∞–ø–∞—Å —Ö–æ–¥–∞ –±–∞—Ç–∞—Ä–µ–∏ –º–µ–Ω—å—à–µ, —á–µ–º –ø—Ä–æ—à–µ–¥—à–µ–µ –≤—Ä–µ–º—è, —Ç–æ:
				2. –í—Ä–µ–º—è –Ω–∞ —Ç–æ–ø–ª–∏–≤–µ = –ü—Ä–æ—à–µ–¥—à–µ–µ –≤—Ä–µ–º—è - –í—Ä–µ–º—è –Ω–∞ –±–∞—Ç–∞—Ä–µ–µ
				3. –¢–æ–ø–ª–∏–≤–æ –≤ –±–∞–∫–µ -= –í—Ä–µ–º—è –Ω–∞ —Ç–æ–ø–ª–∏–≤–µ * —Å—Ä.—Å–∫–æ—Ä–æ—Å—Ç—å * —Ä–∞—Å—Ö–æ–¥ –Ω–∞ 1–∫–º
				4. –ó–∞—Ä—è–¥ –±–∞—Ç–∞—Ä–µ–∏ = 0
				5. –õ–æ–≥: "–ì–∏–±—Ä–∏–¥ %s –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω. –û–Ω –µ—Ö–∞–ª –Ω–∞ —ç–ª–µ–∫—Ç—Ä–æ–¥–≤–∏–≥–∞—Ç–µ–ª–µ, –∞ –∑–∞—Ç–µ–º –Ω–∞ –î–í–°. –ì–∏–±—Ä–∏–¥ –æ—Å—Ç–∞–Ω–æ–≤–∏–ª—Å—è –Ω–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–µ %0.f –≤ %s (–≤—Ä–µ–º—è –°–µ–π—á–∞—Å)."
 3. –§–ª–∞–≥ = –º–∞—à–∏–Ω–∞ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞

 func (h *Hybrid) Stop() {
	// 1. Edge –∫–µ–π—Å—ã:
	if h == nil {
		log.Printf("–ì–∏–±—Ä–∏–¥ –Ω–µ –±—ã–ª –æ–±—ä—è–≤–ª–µ–Ω, –Ω–µ–≤–æ–∑–º–æ–∂–Ω–æ –æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å.\n")
		return
	}
	if !h.moving {
		log.Printf("–ì–∏–±—Ä–∏–¥ %s —É–∂–µ —Å—Ç–æ–∏—Ç.\n", h.model)
		return
	}

	// –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞, —Å—á–∏—Ç–∞–µ–º –≤—Ä–µ–º—è, –∑–∞–ø–∞—Å —Ö–æ–¥–∞
	now := time.Now()                   // –≤—Ä–µ–º—è –°–µ–π—á–∞—Å
	timePassed := now.Sub(h.startTime)  // –ü—Ä–æ—à–µ–¥—à–µ–µ –≤—Ä–µ–º—è .Time
	timePassedF64 := timePassed.Hours() // –ü—Ä–æ—à–µ–¥—à–µ–µ –≤—Ä–µ–º—è –≤ —á–∞—Å–∞—Ö float64

	fuelRate := h.fuelRate / 100     // –†–∞—Å—Ö–æ–¥ —Ç–æ–ø–ª–∏–≤–∞ –Ω–∞ 1 –∫–º
	chargeRate := h.chargeRate / 100 // –†–∞—Å—Ö–æ–¥ –∑–∞—Ä—è–¥–∞ –Ω–∞ 1 –∫–º

	maxFuelRange := h.fuelLevel / fuelRate         // –ó–∞–ø–∞—Å —Ö–æ–¥–∞ –Ω–∞ —Ç–æ–ø–ª–∏–≤–µ
	maxChargeRange := h.batLevel / chargeRate      // –ó–∞–ø–∞—Å —Ö–æ–¥–∞ –Ω–∞ –±–∞—Ç–∞—Ä–µ–µ
	maxRange := maxFuelRange + maxChargeRange      // –û–±—â–∏–π –∑–∞–ø–∞—Å —Ö–æ–¥–∞ –≥–∏–±—Ä–∏–¥–∞ –≤ –∫–∏–ª–æ–º–µ—Ç—Ä–∞—Ö
	maxRangeTime := maxRange / float64(h.avgSpeed) // –û–±—â–∏–π –∑–∞–ø–∞—Å —Ö–æ–¥–∞ –≤ —á–∞—Å–∞—Ö

	// 2. –•–≤–∞—Ç–∏–ª–æ –ª–∏ –∑–∞–ø–∞—Å–∞ —Ö–æ–¥–∞?
	if maxRangeTime < timePassedF64 {
		h.locationX += maxRange // –ö–æ–æ—Ä–¥–∏–Ω–∞—Ç–∞ –≥–∏–±—Ä–∏–¥–∞ += –ó–∞–ø–∞—Å —Ö–æ–¥–∞ –≤ –ö–ú
		// –í—Ä–µ–º—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏ = –≤—Ä–µ–º—è —Å—Ç–∞—Ä—Ç–∞ + –ó–• –≤ —á–∞—Å–∞—Ö
		timeStopped := h.startTime.Add(time.Hour * time.Duration(maxRangeTime))
		h.fuelLevel = 0 // —Ç–æ–ø–ª–∏–≤–æ –∫–æ–Ω—á–∏–ª–æ—Å—å
		h.batLevel = 0  // –∑–∞—Ä—è–¥ –∫–æ–Ω—á–∏–ª—Å—è
		log.Printf("–ì–∏–±—Ä–∏–¥ %s –ø–æ–ª–Ω–æ—Å—Ç—å—é —Ä–∞–∑—Ä—è–¥–∏–ª—Å—è –∏ –æ—Å—Ç–∞–Ω–æ–≤–∏–ª—Å—è –Ω–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–µ %0.f –≤ %s.\n", h.model, h.locationX, timeStopped)
	} else {
		distance := timePassedF64 * float64(h.avgSpeed)
		h.locationX += distance
		maxChargeRangeTime := maxChargeRange / float64(h.avgSpeed) // –ó–∞–ø–∞—Å —Ö–æ–¥–∞ –±–∞—Ç–∞—Ä–µ–∏ –≤ —á–∞—Å–∞—Ö
		// –ï—Å–ª–∏ –∑–∞–ø–∞—Å–∞ —Ö–æ–¥–∞ –±–∞—Ç–∞—Ä–µ–∏ –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —á—Ç–æ–±—ã –µ—Ö–∞—Ç—å –ø—Ä–æ—à–µ–¥—à–µ–µ –≤—Ä–µ–º—è
		if maxChargeRangeTime > timePassedF64 {
			h.batLevel -= distance * chargeRate
			log.Printf("–ì–∏–±—Ä–∏–¥ %s –¥–≤–∏–≥–∞–ª—Å—è –Ω–∞ —ç–ª–µ–∫—Ç—Ä–æ–¥–≤–∏–≥–∞—Ç–µ–ª–µ –∏ –æ—Å—Ç–∞–Ω–æ–≤–∏–ª—Å—è –Ω–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–µ %0.f –≤ %s.\n", h.model, h.locationX, now)
		} else { // –ï—Å–ª–∏ –∑–∞–ø–∞—Å–∞ —Ö–æ–¥–∞ –±–∞—Ç–∞—Ä–µ–∏ –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ, –ø–æ–¥–∫–ª—é—á–∞–µ–º —Ç–æ–ø–ª–∏–≤–æ
			timeByFuel := timePassedF64 - maxChargeRangeTime
			h.fuelLevel -= timeByFuel * float64(h.avgSpeed) * fuelRate
			h.batLevel = 0
			log.Printf("–ì–∏–±—Ä–∏–¥ %s –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω. –û–Ω –µ—Ö–∞–ª –Ω–∞ —ç–ª–µ–∫—Ç—Ä–æ–¥–≤–∏–≥–∞—Ç–µ–ª–µ, –∞ –∑–∞—Ç–µ–º –Ω–∞ –î–í–°. –ì–∏–±—Ä–∏–¥ –æ—Å—Ç–∞–Ω–æ–≤–∏–ª—Å—è –Ω–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–µ %0.f –≤ %s.\n", h.model, h.locationX, now)
		}
	}
	// 3. –§–ª–∞–≥ - –º–∞—à–∏–Ω–∞ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞
	h.moving = false
}

func (ts *TransportService) TestDrive(vehicle interface{}, distance int) {
	switch vehicle.(type) {
	case FuelVehicle:
		// —Ä–∞—Å—Å—á–∏—Ç–∞—Ç—å –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ç–æ–ø–ª–∏–≤–∞
		// –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Ö–≤–∞—Ç–∞–µ—Ç –ª–∏ —Ç–æ–ø–ª–∏–≤–∞
		// –µ—Å–ª–∏ –¥–∞, —Ç–æ —Å–∏–º—É–ª–∏—Ä–æ–≤–∞—Ç—å –ø–æ–µ–∑–¥–∫—É:
		// 0. –≤—ã–∑–≤–∞—Ç—å –º–µ—Ç–æ–¥ Move(), –æ–±—Ä–∞–±–æ—Ç–∞—Ç—å —Å–ª—É—á–∞–π –æ—à–∏–±–∫–∏
		// 0.1 –ª–æ–≥ —á—Ç–æ –º–∞—à–∏–Ω–∞ –ø–æ–µ—Ö–∞–ª–∞
		// 1. –ø—Ä–∏–±–∞–≤–∏—Ç—å –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—É –∏ –∑–∞–ø–æ–º–Ω–∏—Ç—å –ø–æ—Å–ª–µ–¥–Ω—é—é –ø—Ä–æ–π–¥–µ–Ω–Ω—É—é –¥–∏—Å—Ç–∞–Ω—Ü–∏—é
		// 2. —É–º–µ–Ω—å—à–∏—Ç—å –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ç–æ–ø–ª–∏–≤–∞ –Ω–∞ –∑–∞—Ç—Ä–∞—á–µ–Ω–Ω–æ–µ
		// 3. –≤—ã–∑–≤–∞—Ç—å –º–µ—Ç–æ–¥ Stop(), –æ–±—Ä–∞–±–æ—Ç–∞—Ç—å —Å–ª—É—á–∞–π –æ—à–∏–±–∫–∏
		// 3.1 –ª–æ–≥ —á—Ç–æ –º–∞—à–∏–Ω–∞ –ø—Ä–æ—à–ª–∞ —Ç–µ—Å—Ç –¥—Ä–∞–π–≤
	case ElectricVehicle:
		// —Ä–∞—Å—Å—á–∏—Ç–∞—Ç—å –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∑–∞—Ä—è–¥–∞
		// –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Ö–≤–∞—Ç–∞–µ—Ç –ª–∏ –∑–∞—Ä—è–¥–∞
		// –µ—Å–ª–∏ –¥–∞, —Ç–æ —Å–∏–º—É–ª–∏—Ä–æ–≤–∞—Ç—å –ø–æ–µ–∑–¥–∫—É:
		// 0. –≤—ã–∑–≤–∞—Ç—å –º–µ—Ç–æ–¥ Move(), –æ–±—Ä–∞–±–æ—Ç–∞—Ç—å —Å–ª—É—á–∞–π –æ—à–∏–±–∫–∏
		// 0.1 –ª–æ–≥ —á—Ç–æ —ç–ª–µ–∫—Ç—Ä–æ—Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç –ø–æ–µ—Ö–∞–ª
		// 1. –ø—Ä–∏–±–∞–≤–∏—Ç—å –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—É –∏ –∑–∞–ø–æ–º–Ω–∏—Ç—å –ø–æ—Å–ª–µ–¥–Ω—é—é –ø—Ä–æ–π–¥–µ–Ω–Ω—É—é –¥–∏—Å—Ç–∞–Ω—Ü–∏—é
		// 2. —É–º–µ–Ω—å—à–∏—Ç—å –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∑–∞—Ä—è–¥–∞ –Ω–∞ –∑–∞—Ç—Ä–∞—á–µ–Ω–Ω—ã–π
		// 3. –≤—ã–∑–≤–∞—Ç—å –º–µ—Ç–æ–¥ Stop(), –æ–±—Ä–∞–±–æ—Ç–∞—Ç—å —Å–ª—É—á–∞–π –æ—à–∏–±–∫–∏
		// 3.1 –ª–æ–≥ —á—Ç–æ —ç–ª–µ–∫—Ç—Ä–æ—Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç –ø—Ä–æ—à–µ–ª —Ç–µ—Å—Ç –¥—Ä–∞–π–≤
	case HybridVehicle:
		// —Ä–∞—Å—Å—á–∏—Ç–∞—Ç—å –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∑–∞—Ä—è–¥–∞
		// –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Ö–≤–∞—Ç–∞–µ—Ç –ª–∏ –∑–∞–ø–∞—Å–∞ —Ö–æ–¥–∞ –Ω–∞ –∑–∞—Ä—è–¥–µ+—Ç–æ–ø–ª–∏–≤–µ
		// –µ—Å–ª–∏ –¥–∞, —Ç–æ —Ç–∞ –∂–µ –ª–æ–≥–∏–∫–∞ —á—Ç–æ –∏ —É —ç–ª–µ–∫—Ç—Ä–æ—Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç–∞
		// {}
		// –µ—Å–ª–∏ –Ω–µ—Ç, —Ç–æ –µ–¥–µ–º —Å–∫–æ–ª—å–∫–æ –º–æ–∂–µ–º –Ω–∞ –±–∞—Ç–∞—Ä–µ–µ, –∑–∞—Ç–µ–º –ø–µ—Ä–µ—Ö–æ–¥–∏–º –Ω–∞ —Ç–æ–ø–ª–∏–≤–æ
		// —Å–∏–º—É–ª—è—Ü–∏—è –ø–æ–µ–∑–¥–∫–∏
		// 0. –≤—ã–∑—ã–≤–∞–µ–º Move(), –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º –æ—à–∏–±–∫–∏
		// 0.1 –ª–æ–≥ —á—Ç–æ –≥–∏–±—Ä–∏–¥ –ø–æ–µ—Ö–∞–ª
		// 1. —É—Ä–æ–≤–µ–Ω—å –∑–∞—Ä—è–¥–∞ = 0, —Ç–æ–ø–ª–∏–≤–æ -= (–≤—Å—ë —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ-—Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ –Ω–∞ –±–∞—Ç–∞—Ä–µ–π–∫–µ) * —Ä–∞—Å—Ö–æ–¥
		// 2. –ø—Ä–∏–±–∞–≤–ª—è–µ–º –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—É –∏ –∑–∞–ø–æ–º–∏–Ω–∞–µ–º –ø–æ—Å–ª–µ–¥–Ω—é—é –ø—Ä–æ–π–¥–µ–Ω–Ω—É—é –¥–∏—Å—Ç–∞–Ω—Ü–∏—é
		// 3. –≤—ã–∑–≤–∞—Ç—å –º–µ—Ç–æ–¥ Stop(), –æ–±—Ä–∞–±–æ—Ç–∞—Ç—å —Å–ª—É—á–∞–π –æ—à–∏–±–∫–∏
		// 3.1 –ª–æ–≥ —á—Ç–æ –≥–∏–±—Ä–∏–¥ –æ—Å—Ç–∞–Ω–æ–≤–∏–ª—Å—è
	}

	// –µ—Å—Ç—å —Ç—Ä–∏ –≤–∞—Ä–∏–∞–Ω—Ç–∞ —Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç–∞ –∫–æ—Ç–æ—Ä—ã–π –º–æ–∂–µ—Ç –ø—Ä–∏–π—Ç–∏ –≤ —ç—Ç—É —Ñ—É–Ω–∫—Ü–∏—é
	// —Ç–æ–ø–ª–∏–≤–Ω—ã–π / —ç–ª–µ–∫—Ç—Ä–∏—á–µ—Å–∫–∏–π / –≥–∏–±—Ä–∏–¥–Ω—ã–π
	// –∫–∞–∫ –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –∫–∞–∫–æ–π —É –Ω–∞—Å —Ç—É—Ç —Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç –ø—Ä–∏—à–µ–ª?

	// –ü—Ä–æ–≤–æ–¥–∏—Ç —Ç–µ—Å—Ç-–¥—Ä–∞–π–≤ –Ω–∞ —É–∫–∞–∑–∞–Ω–Ω–æ–µ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ
	// - –ü—Ä–æ–≤–µ—Ä—è–µ—Ç –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å —Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç–∞
	// - –†–∞—Å—Å—á–∏—Ç—ã–≤–∞–µ—Ç –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ–µ —Ç–æ–ø–ª–∏–≤–æ/—ç–Ω–µ—Ä–≥–∏—é
	// - –°–∏–º—É–ª–∏—Ä—É–µ—Ç –ø–æ–µ–∑–¥–∫—É —Å –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏—è
	// - –õ–æ–≥–∏—Ä—É–µ—Ç –≤—Å–µ —ç—Ç–∞–ø—ã
}